<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <style>
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background-color: rgba(0, 0, 0, 0.95);
        padding: 20px 0;
        border-bottom: 1px solid rgba(255, 215, 0, 0.1);
      }
      .header-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .logo-link {
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(169, 169, 169, 0.1);
        border-radius: 50%;
        padding: 10px;
        width: 60px;
        height: 60px;
      }
      .logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
      .nav-links {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 60px;
      }
      .nav-link {
        color: #ffffff;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        letter-spacing: 1px;
        text-transform: uppercase;
        transition: color 0.3s ease;
      }
      .nav-link:hover {
        color: #FF0000;
      }
      .story-section, .community-section {
        position: relative;
        min-height: 100vh;
        color: #ffffff;
        background-color: #000;
        padding: 120px 0 0;
        margin: 0;
        overflow-x: hidden;
      }
      .story-background, .community-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        overflow: hidden;
      }
      .story-background img, .community-background img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.15;
        transform: scale(1.1);
      }
      .story-content, .community-content {
        position: relative;
        z-index: 2;
        max-width: 1000px;
        margin: 0 auto;
        padding: 50px 30px;
      }
      h1, h2 {
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 800;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5),
                     0 0 10px rgba(255, 0, 0, 0.3);
      }
      h2 {
        color: #FF0000;
      }
      p {
        color: #ffffff;
        line-height: 1.8;
        font-weight: 400;
        letter-spacing: 1px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
      }
      .highlight {
        color: #FF0000;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
      }
      @media (max-width: 768px) {
        .header {
          padding: 10px 0;
        }
        .logo-link {
          width: 40px;
          height: 40px;
        }
        .nav-links {
          gap: 20px;
        }
        .nav-link {
          font-size: 0.8rem;
        }
      }
    </style>
  </head>
  <body>
    {% section 'header' %}
    <main class="page-container">
      {{ content_for_layout }}
      {% section 'footer' %}
    </main>
    {{ 'theme.js' | asset_url | script_tag }}
  </body>
</html>
