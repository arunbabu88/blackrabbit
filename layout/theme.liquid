<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <style>
      .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background-color: rgba(44, 62, 80, 0.95);
        padding: 12px 0;
        border-bottom: 1px solid rgba(52, 73, 94, 0.4);
        backdrop-filter: blur(10px);
      }
      .header-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 0 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
      }
      .logo-link {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 3px;
        width: 60px;
        height: auto;
        flex-shrink: 0;
      }
      .logo {
        width: 60px;
        height: auto;
        object-fit: contain;
      }
      .nav-links {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 30px;
      }
      .nav-link {
        color: #ecf0f1;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        letter-spacing: 1px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        padding: 5px 10px;
        border-radius: 4px;
        position: relative;
      }
      .nav-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 50%;
        width: 0;
        height: 2px;
        background-color: #e74c3c;
        transition: all 0.3s ease;
        transform: translateX(-50%);
      }
      .nav-link:hover {
        color: #e74c3c;
        transform: translateY(-1px);
        text-shadow: 0 0 8px rgba(231, 76, 60, 0.3);
      }
      .nav-link:hover::after {
        width: 80%;
      }
      .story-section, .community-section {
        position: relative;
        min-height: 100vh;
        color: #ffffff;
        background-color: #000;
        padding: 100px 0 0;
        margin: 0;
        overflow-x: hidden;
      }
      .story-background, .community-background {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        overflow: hidden;
      }
      .story-background img, .community-background img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.15;
        transform: scale(1.1);
      }
      .story-content, .community-content {
        position: relative;
        z-index: 2;
        max-width: 1000px;
        margin: 0 auto;
        padding: 50px 30px;
      }
      h1 {
        font-size: 2.2rem;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 4px;
        font-weight: 800;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5),
                     0 0 10px rgba(255, 0, 0, 0.3);
      }
      h2 {
        font-size: 1.5rem;
        color: #FF0000;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 800;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
      }
      p {
        font-size: 1rem;
        color: #ffffff;
        line-height: 1.8;
        font-weight: 400;
        letter-spacing: 2px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
        opacity: 0.9;
      }
      .highlight {
        color: #FF0000;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
      }
      @media (max-width: 768px) {
        .header {
          padding: 10px 0;
        }
        .header-container {
          padding: 0 10px;
          max-width: 350px;
        }
        .logo-link {
          width: 50px;
        }
        .logo {
          width: 50px;
        }
        .nav-links {
          gap: 15px;
        }
        .nav-link {
          font-size: 0.75rem;
          padding: 3px 6px;
        }
      }
      
      @media (max-width: 480px) {
        .header-container {
          padding: 0 8px;
          max-width: 300px;
        }
        .logo-link {
          width: 45px;
        }
        .logo {
          width: 45px;
        }
        .nav-links {
          gap: 12px;
        }
        .nav-link {
          font-size: 0.7rem;
          padding: 2px 4px;
        }
      }
    </style>
  </head>
  <body>
    {% section 'header' %}
    <main class="page-container">
      {{ content_for_layout }}
      {% section 'footer' %}
    </main>
    {{ 'theme.js' | asset_url | script_tag }}
  </body>
</html>
